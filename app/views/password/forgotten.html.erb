<section class="forgotten-view form-view">
  <div class="bg">

  </div>

  <div class="forgotten-container form-container">
    <img src="https://s3-eu-west-1.amazonaws.com/metropolis-images/assets/landing-logo.svg" alt="landing-logo.jpg" />
    <div class="forgotten-form password-reset-form">
      <span class="error-container"></span>
      <h3>Réinitialiser votre mot de passe</h3>
      <%= form_tag("/api/v1/register/reset", method: "get", class: "form-init-reset") do %>
        <p>
          Entrez votre adresse email ci-dessous et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </p>
        <div class="">
          <span></span>
          <%= text_field_tag(:email, nil, placeholder: "Adresse email") %>
        </div>
        <%= submit_tag("Réinitialiser") %>
      <% end %>
      <span class="response hide"></span>
    </div>
  </div>
</section>
